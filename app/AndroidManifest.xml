<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.TinyAccessory" android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk android:minSdkVersion="10" android:targetSdkVersion="11" />

	<application android:icon="@drawable/ic_launcher_tinyaccessory"
		android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
		<uses-library android:name="com.android.future.usb.accessory" />
		<activity android:name=".TinyAccessoryLaunch" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".TinyAccessoryActivity" android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".TinyAccessoryPhone" android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".TinyAccessoryTablet" android:label="@string/app_name"
			android:screenOrientation="landscape">
		</activity>
		<activity android:name="com.example.TinyAccessory.UsbAccessoryActivity" android:label="TinyAccessory"
			android:taskAffinity="" android:launchMode="singleInstance">
			<intent-filter>
				<action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
			</intent-filter>

			<meta-data android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
				android:resource="@xml/accessory_filter" />
		</activity>

	</application>
</manifest>
